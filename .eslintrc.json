{
  "root": true,
  "ignorePatterns": ["projects/**/*", "**/*.html"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
      },
      "plugins": ["@typescript-eslint"],
      "rules": {
        "no-unused-vars": "warn",
        "no-console": "warn",
        "@typescript-eslint/no-unused-vars": "warn"
      }
    }
  ]
}